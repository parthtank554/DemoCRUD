@model DemoCRUD.Models.TeacherModel

<div class="card">
    <div class="card-header bg-success text-white text-uppercase">
        <h4>Add Teacher</h4>
    </div>
    <form asp-action="AddTeacher">
        <div class="form-group">
            Name:
            <input type="text" asp-for="T_Name" class="form-control" id="T_Name">
            <span asp-validation-for="T_Name" class="text-danger"></span>
        </div><br />
        <div class="form-group">
            Subject:
            <input type="text" asp-for="Subject" class="form-control" id="Subject">
            <span asp-validation-for="Subject" class="text-danger"></span>
        </div><br />
        <div class="form-group">
            Semester:
            <input type="text" asp-for="sem" class="form-control" id="sem">
            <span asp-validation-for="sem" class="text-danger"></span>
        </div><br />
        <div class="form-group">
            Experience:
            <input type="text" asp-for="Exp" class="form-control" id="Exp">
            <span asp-validation-for="Exp" class="text-danger"></span>
        </div><br />
        <div class="form-group">
            Salary:
            <input type="text" asp-for="Salary" class="form-control" id="Salary">
            <span asp-validation-for="Salary" class="text-danger"></span>
        </div><br />
        <div class="form-group">
            <button type="submit" class="btn btn-success rounded-1">Add Teacher</button>
        </div><br />
    </form>
    @if (TempData["msg"] != null)
    {
        <script>

            alert('@TempData["msg"].ToString();');
            window.location.href = "@Url.Action("Index", "Teacher")";
        </script>
    }
</div>
